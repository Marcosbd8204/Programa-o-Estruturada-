//Questão 01
#include <stdio.h>
#include <stdlib.h>

int main(){
    char srt[5]="Porta";
    int i=0;
    for (i=0;i<5;i++){
        printf("%c",srt[i]);
    }
    return 0;
}
//Questão 02
#include <stdio.h>
#include <stdlib.h>

int main(){
    char srt[8]="Manivela";
    int i=0, cont=0;
    for (i=0;i<8;i++){
        printf("%c",srt[i]);
        cont++;
    }
    printf("O tamanho dessa string é de %d caracteres.",cont);
    return 0;
}
//Questão 03
#include <stdio.h>
#include <stdlib.h>

int main(){
    char srt[8]="Manivela",srt2[8]="Manivela";
    int i=0, cont=0;
    for (i=0;i<8;i++){
        if( srt[i] == srt2[i]){
        }else{
            cont++;
        }
    }
    if (cont==0){
        printf("as palavras são iguais");
    }else{
        printf("as palavras são diferentes");
    }
    return 0;
}
